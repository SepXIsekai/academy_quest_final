<div id="quest_form" class="my-5 w-full max-w-lg mx-auto bg-gray-800 p-6 rounded-2xl shadow-lg">
  <%= form_with(model: quest, local: false) do |form| %>
    <!-- input + button -->
    <div class="w-full flex flex-col lg:flex-row lg:items-center lg:space-x-3">
      <!-- input field -->
      <div class="w-full mb-3 lg:mb-0">
        <%= form.text_field :activity, placeholder: "New activity",
            class: "w-full px-4 py-3 border border-blue-400 rounded-xl bg-gray-700 text-gray-100 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition" %>
      </div>
      <!-- button -->
      <div class="w-full lg:w-auto">
        <%= form.submit "Create Quest",
            class: "w-full lg:w-auto px-6 py-3 bg-green-500 hover:bg-green-400 text-white font-semibold rounded-xl shadow-lg transition duration-200" %>
      </div>
    </div>
    <% if quest.errors.any? %>
      <div class="text-red-400 mt-2 text-sm w-full">
        <%= quest.errors.full_messages.join(", ") %>
      </div>
    <% end %>
  <% end %>
</div>
