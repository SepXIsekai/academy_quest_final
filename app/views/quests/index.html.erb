<div class="w-full min-h-screen bg-blue-900 text-gray-100 py-10 px-5">
  <h1 class="font-bold text-4xl mb-8 text-blue-300 text-center">Academy Quests</h1>
  <!-- โปรไฟล์ + ชื่อ -->
  <div class="flex flex-col items-center mb-5 space-y-4">
    <img src="<%= asset_path('myprofile.jpg') %>" 
         alt="Profile" 
         class="w-40 h-40 object-cover rounded-lg border-4 border-blue-500 shadow-lg">
    <h2 class="text-2xl sm:text-3xl font-bold text-blue-200 leading-snug">
      Thananton Pojanawongpanit
    </h2>
  </div>
  <div class="my-5 max-w-lg mx-auto">
    <%= form_with(model: @quest, local: true) do |form| %>
      <div class="flex flex-col sm:flex-row space-y-2 sm:space-y-0 sm:space-x-2">
        <%= form.text_field :activity, placeholder: "New quest activity", class: "flex-1 px-3 py-2 border border-blue-400 rounded-md bg-gray-800 text-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        <%= form.submit "Create Quest", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-500 shadow-md" %>
      </div>
    <% end %>
  </div>
  <div class="max-w-2xl mx-auto space-y-6">
    <% @quests.each do |quest| %>
      <div class="flex flex-row items-center justify-between p-4 bg-gray-800 rounded-lg shadow-sm hover:shadow-md transition-shadow w-full sm:w-3/4 mx-auto">
        <!-- Left: Checkbox + Activity -->
        <div class="flex items-center space-x-3 flex-1">
          <p class="text-lg font-medium text-blue-300">
            <%= quest.activity %>
          </p>
        </div>
        <!-- Right: Trash button -->
      </div>
    <% end %>
  </div>
</div>