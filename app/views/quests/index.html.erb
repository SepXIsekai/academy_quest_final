<div class="w-full min-h-screen bg-blue-900 text-gray-100 py-10 px-5">

  <!-- Title ตรงกลาง -->
  <h1 class="font-bold text-4xl mb-8 text-blue-300 text-center">Academy Quests</h1>

  <!-- โปรไฟล์ + ชื่อ -->
  <div class="flex flex-col items-center mb-5 space-y-4">
    <img src="<%= asset_path('myprofile.jpg') %>" 
         alt="Profile" 
         class="w-60 h-60 object-cover rounded-full border-4 border-white-500 shadow-lg">
    <h2 class="text-2xl sm:text-3xl font-bold text-blue-200 leading-snug">
      Thananton Pojanawongpanit
    </h2>
    <h3 class="text-xl sm:text-2xl font-bold text-amber-600 leading-snug">
      Cafeine Team ☕️
    </h3>
    <%= link_to "My Brags Document", brags_path, class: "px-6 py-3 bg-blue-600 hover:bg-blue-500 text-white font-semibold rounded-lg shadow-md transition duration-200" %>
  </div>

  <!-- Form สร้าง quest -->
  <%= render "form", quest: @quest %>

  <!-- List quests -->
  <div id="quests_list" class="max-w-2xl mx-auto space-y-6">
    <%= render @quests %>
  </div>

</div>
