<div class="w-full min-h-screen bg-blue-900 text-gray-100 py-10 px-5">
  <!-- Title ตรงกลาง -->
  <h1 class="font-bold text-4xl mb-8 text-blue-300 text-center">Academy Quests</h1>
  <!-- โปรไฟล์ + ชื่อ -->
  <div class="flex flex-col items-center mb-5 space-y-4">
    <img src="<%= asset_path('myprofile.jpg') %>" 
         alt="Profile" 
         class="w-60 h-60 object-cover rounded-full border-4 border-white-500 shadow-lg">
    <h2 class="text-2xl sm:text-3xl font-bold text-blue-200 leading-snug">
      Thananton Pojanawongpanit
    </h2>
    <h3 class="text-xl sm:text-2xl font-bold text-amber-600 leading-snug">
      Cafeine Team
    </h3>
       <%= link_to "My Brags Document", brags_path, class: "px-6 py-3 bg-blue-600 hover:bg-blue-500 text-white font-semibold rounded-lg shadow-md transition duration-200" %>
  </div>
  <!-- Form สร้าง quest -->
  <div class="my-5 max-w-lg mx-auto">
    <%= form_with(model: @quest, local: true) do |form| %>
      <div class="flex flex-col sm:flex-row space-y-2 sm:space-y-0 sm:space-x-2">
        <%= form.text_field :activity, placeholder: "New quest activity", class: "flex-1 px-3 py-2 border border-blue-400 rounded-md bg-gray-800 text-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        <%= form.submit "Create Quest", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-500 shadow-md" %>
      </div>
    <% end %>
  </div>
  <!-- List quests -->
  <div class="max-w-2xl mx-auto space-y-6">
    <% @quests.each do |quest| %>
      <div class="flex flex-row items-center justify-between p-4 bg-gray-800 rounded-lg shadow-sm hover:shadow-md transition-shadow w-full sm:w-3/4 mx-auto">
        <!-- Left: Checkbox + Activity -->
        <div class="flex items-center space-x-3 flex-1">
          <%= form_with url: toggle_status_quest_path(quest), method: :patch, local: true do |f| %>
            <%= f.check_box :status, checked: quest.status, id: "quest_status_#{quest.id}",class: "w-5 h-5 text-blue-500 bg-gray-700 border-gray-600 rounded focus:ring-blue-400", onchange: "this.form.submit();" %>
          <% end %>
          <p class="text-lg font-medium text-blue-300 <%= 'line-through text-gray-400' if quest.status %>">
            <%= quest.activity %>
          </p>
        </div>
        <!-- Right: Trash button -->
        <div class="flex items-center justify-center ml-3">
          <%= button_to quest, method: :delete,id: "destroy_quest_#{quest.id}",class: "w-10 h-10 flex items-center justify-center rounded-md bg-red-600 hover:bg-red-500 text-white shadow-sm transition" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5-4h4m-4 0a1 1 0 00-1 1v1h6V4a1 1 0 00-1-1m-4 0h4" />
            </svg>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
